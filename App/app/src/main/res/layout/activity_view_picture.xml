<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.henu.swface.activity.ViewPictureActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_view_picture"
        android:background="#74828b"
        >


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageView_face"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@mipmap/loading"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/textView_face_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试姓名"
            android:textColor="#000000"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/textView_face_register_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView_face_update_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
